    cb-&gt;startup_cb = decoder_raw_startup;
    cb-&gt;begin_cb = decoder_raw_begin_txn;
    cb-&gt;change_cb = decoder_raw_change;
    cb-&gt;commit_cb = decoder_raw_commit_txn;
    cb-&gt;shutdown_cb = decoder_raw_shutdown;
}
</code></pre></div>
